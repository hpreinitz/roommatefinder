<%= render 'layouts/devise_hdr' %>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 <div id="tabs">
  <ul>
    <li><a href="#tabs-1">Tab 1</a></li>
    <li><a href="#tabs-2">Tab 2</a></li>
    <li><a href="#tabs-3">Tab 3</a></li>
  </ul>

  <div id="tabs-1">
    <h2>Content heading 1</h2>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

    <p>
      <%= f.label :firstname, 'First Name' %><br>
      <%= f.text_field :firstname %>
    </p>
 
    <p>
      <%= f.label :lastname, 'Last Name' %><br>
      <%= f.text_field :lastname %>
    </p>


  </div>

  <div id="tabs-2">
    <h2>Content heading 2</h2>

    <img src="smiley.gif" alt="Smiley face" height="42" width="42">

    <p>
      <%= f.label :birthdate, 'Birth Date' %><br>
      <%= f.date_field :birthdate %>
    </p>

    <p>
      <%= f.label :gender, "Male", :value => "m" %><br>
      <%= f.radio_button :gender, "m" %>
     </p>

    <p>
      <%= f.label :gender, "Female", :value => "f" %><br>
      <%= f.radio_button :gender, "f" %>
    </p>

    <p>
      <%= f.label :gender, "Transgender", :value => "t" %><br>
      <%= f.radio_button :gender, "t" %>
     </p>
     
    <p>
      <%= f.label :gender, "Not Specified", :value => "n" %><br>
      <%= f.radio_button :gender, "n" %>
    </p>

    <p>
      <%= f.label :bio, 'Biography' %><br>
      <%= f.text_field :bio %>
    </p>

    <p>
      <%= f.label :interests, 'Interests' %><br>
      <%= f.text_field :interests %>
    </p>

  </div>

  <div id="tabs-3">
    <h2>Content heading 3</h2>

     <div class="ui-widget">
       <label for="tags">Location </label>
       <input id="tags">
     </div>

     <div class="ui-widget">
       <label for="tags">Employer </label>
       <input id="tags">
     </div>

     <div id="slider"></div> 

     <div class="field">
        <%= f.label :petsok, "Pets OK?", :value => "false" %> <br />
        <%= f.check_box :petsok, {}, "true", "false" %> <br />
     </div>
      
     <div class="field">
        <%= f.label :gendermaleok, "Male OK?", :value => "false" %> <br />
        <%= f.check_box :gendermaleok, {}, "true", "false" %> <br />
      </div>

      <div class="field">
         <%= f.label :genderfemaleok, "Female OK?", :value => "false" %> <br />
         <%= f.check_box :genderfemaleok, {}, "true", "false" %> <br />
      </div>

      <div class="field">
         <%= f.label :gendertransgenderok, "Transgender OK?", :value => "false" %> <br />
         <%= f.check_box :gendertransgenderok, {}, "true", "false" %> <br />
      </div>

      <div class="field">
         <%= f.label :gendernotspecifiedok, "Not Specified OK?", :value => "false" %> <br />
         <%= f.check_box :gendernotspecifiedok, {}, "true", "false" %> <br />
      </div>

   </div>
   
</div>  

  <div><%= f.submit "Sign up" %></div>
<% end %>


<%= render "devise/shared/links" %>
<%= render 'layouts/devise_ftr' %>

