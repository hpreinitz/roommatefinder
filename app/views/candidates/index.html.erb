
<%= render 'layouts/header' %>
<h1>Listing Candidates</h1>

<div id="tabs">
  <ul>
    <li><a href="#tabs-1">Candidates</a></li>
    <li><a href="#tabs-2">Messages</a></li>

  </ul>

  <div id="tabs-1">

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Birth Date</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Interests</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.firstname %></td>
        <td><%= profile.lastname %></td>
        <td><%= profile.email %></td>
        <td><%= profile.birthdate %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.bio %></td>
        <td><%= profile.interests %></td>
        <td><%= link_to 'Show', profile %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
  </div>

  <div id="tabs-2">

  <h3> Messages tab </h3>
    
  </div>

</div>
<br>

<%= render 'layouts/footer' %>
