
<%= render 'layouts/header' %>
<h1>Candidates</h1>

<div id="tabs">
  <ul>
    <li><a href="#tabs-1">Candidates</a></li>
    <li><a href="#tabs-2">Messages</a></li>

  </ul>

  <div id="tabs-1">

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Birth Date</th>
      <th>Gender</th>
      <th>Biography</th>
      <th>Interests</th>
      <th>Pets OK</th>
      <th>Male OK</th>
      <th>Female OK</th>
      <th>Transgender OK</th>
      <th>Not Specified OK</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.firstname %></td>
        <td><%= candidate.lastname %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.birthdate %></td>
        <td><%= case candidate.gender
                when 'm'
                  'Male'
                when 'f'
                  'Female'
                when 't'
                  'Transgender'
                when 'n'
                  'Not Specified'
                when ''
                  'Not Specified'
                when nil
                  'Not Specified'
                else
                  'Error'
                end         %></td>
        <td><%= candidate.bio %></td>
        <td><%= candidate.interests %></td>
        <td><%= if candidate.petsok == "true"
                  'Yes'
                else
                  'No'
                end
        %></td>
        <td><%= if candidate.gendermaleok == 'true'
                  'Yes'
                else
                  'No'
                end

         %></td>
        <td><%= if candidate.genderfemaleok == 'true'
                  'Yes'
                else
                  'No'
                end          
         %></td>
        <td><%= if candidate.gendertransgenderok == 'true'
                  'Yes'
                else
                  'No'
                end          
         %></td>
        <td><%= if candidate.gendernotspecifiedok == 'true'
                  'Yes'
                else
                  'No'
                end          
         %></td>
        <td><%= link_to 'Show', candidate %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
  </div>

  <div id="tabs-2">

  <h3> Messages tab </h3>
    
  </div>

</div>
<br>
<%= link_to "Candidates", candidates_path %>
<%= render 'layouts/footer' %>
